# Local Development Environment
# Copy this file to .env.local to use it
# cp .env.local.example .env.local

# Server Configuration
PORT=5001
NODE_ENV=development

# Database - Connect to database on port 5000
DATABASE_URL=postgresql://lifeworld_dev:lifeworld_dev_local@localhost:5000/lifeworld_dev

# JWT Configuration
JWT_SECRET=dev-jwt-secret-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d

# AI Services (Optional - for local development)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2
OLLAMA_EMBEDDING_MODEL=nomic-embed-text
GROQ_API_KEY=
OPENAI_API_KEY=

# Redis (optional - cache for hierarchy/nodes; app works without it)
# REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=debug
