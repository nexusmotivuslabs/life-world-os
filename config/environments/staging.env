# Staging Environment Variables
# Use with cloud providers or local staging

# Environment
NODE_ENV=staging
ENVIRONMENT=staging

# Database
# For cloud: Use managed database connection string
# For local: Use Docker Compose values
STAGING_DB_USER=lifeworld_staging
STAGING_DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD
STAGING_DB_NAME=lifeworld_staging
STAGING_DB_HOST=localhost
STAGING_DB_PORT=5434
STAGING_DATABASE_URL=postgresql://lifeworld_staging:CHANGE_ME_SECURE_PASSWORD@localhost:5434/lifeworld_staging

# Backend
STAGING_BACKEND_PORT=3002
STAGING_API_URL=http://localhost:3002
# For cloud: https://api-staging.yourdomain.com

# Frontend
STAGING_FRONTEND_PORT=5174
VITE_API_URL=http://localhost:3002
# For cloud: https://staging.yourdomain.com

# JWT
STAGING_JWT_SECRET=CHANGE_ME_STAGING_JWT_SECRET_MIN_32_CHARS
STAGING_JWT_EXPIRES_IN=7d

# AI Services
OLLAMA_URL=
OLLAMA_MODEL=llama3.2
GROQ_API_KEY=your-groq-api-key
OPENAI_API_KEY=your-openai-api-key

# Logging
STAGING_LOG_LEVEL=info

# Cloud Provider (optional)
# CLOUD_PROVIDER=aws|gcp|azure|digitalocean|railway|render
# REGION=us-east-1

