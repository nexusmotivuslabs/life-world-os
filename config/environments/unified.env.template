# Unified Environment Configuration Template
# All environments use the same variable structure with environment-specific prefixes
# Copy this template and replace {ENV} with dev, staging, or prod

# =============================================================================
# ENVIRONMENT IDENTIFICATION
# =============================================================================
NODE_ENV={NODE_ENV}
ENVIRONMENT={ENV}

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# For local Docker: Use service name (postgres-{env})
# For cloud: Use managed database connection string
{ENV}_DB_HOST=localhost
{ENV}_DB_PORT={DB_PORT}
{ENV}_DB_USER={DB_USER}
{ENV}_DB_PASSWORD={DB_PASSWORD}
{ENV}_DB_NAME={DB_NAME}
{ENV}_DATABASE_URL=postgresql://{DB_USER}:{DB_PASSWORD}@localhost:{DB_PORT}/{DB_NAME}
{ENV}_DB_CONTAINER_NAME={DB_CONTAINER_NAME}

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================
{ENV}_BACKEND_PORT={BACKEND_PORT}
{ENV}_API_URL={API_URL}
{ENV}_BACKEND_CONTAINER_NAME={BACKEND_CONTAINER_NAME}
{ENV}_BACKEND_IMAGE_NAME=life-world-os-backend-{ENV}

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
{ENV}_FRONTEND_PORT={FRONTEND_PORT}
{ENV}_FRONTEND_URL={FRONTEND_URL}
{ENV}_FRONTEND_CONTAINER_NAME={FRONTEND_CONTAINER_NAME}
{ENV}_FRONTEND_IMAGE_NAME=life-world-os-frontend-{ENV}
VITE_API_URL={API_URL}

# =============================================================================
# AUTHENTICATION
# =============================================================================
{ENV}_JWT_SECRET={JWT_SECRET}
{ENV}_JWT_EXPIRES_IN=7d
JWT_SECRET={JWT_SECRET}
JWT_EXPIRES_IN=7d

# =============================================================================
# AI SERVICES
# =============================================================================
OLLAMA_URL={OLLAMA_URL}
OLLAMA_MODEL=llama3.2
OLLAMA_EMBEDDING_MODEL=nomic-embed-text
GROQ_API_KEY={GROQ_API_KEY}
OPENAI_API_KEY={OPENAI_API_KEY}

# =============================================================================
# LOGGING
# =============================================================================
{ENV}_LOG_LEVEL={LOG_LEVEL}
LOG_LEVEL={LOG_LEVEL}

# =============================================================================
# BUILD INFORMATION (optional, auto-generated)
# =============================================================================
BUILD_VERSION={BUILD_VERSION:-unknown}
BUILD_COMMIT={BUILD_COMMIT:-unknown}
BUILD_BRANCH={BUILD_BRANCH:-unknown}
BUILD_TIMESTAMP={BUILD_TIMESTAMP:-unknown}

# =============================================================================
# CLOUD PROVIDER (optional)
# =============================================================================
# CLOUD_PROVIDER=aws|gcp|azure|digitalocean|railway|render
# REGION=us-east-1

