# Local Development Environment Variables
# Copy to apps/backend/.env for local development (without Docker)
# This is for local PostgreSQL (Homebrew or direct installation)
# All environments use the same variable structure - only values differ

# =============================================================================
# ENVIRONMENT IDENTIFICATION
# =============================================================================
NODE_ENV=development
ENVIRONMENT=local

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Local PostgreSQL connection (Homebrew or direct installation)
# Default Homebrew PostgreSQL port: 5432
DATABASE_URL=postgresql://lifeworld:lifeworld_local@localhost:5432/lifeworld_local
DB_HOST=localhost
DB_PORT=5432
DB_USER=lifeworld
DB_PASSWORD=lifeworld_local
DB_NAME=lifeworld_local

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================
PORT=3001
API_URL=http://localhost:3001

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
VITE_API_URL=http://localhost:3001

# =============================================================================
# AUTHENTICATION
# =============================================================================
JWT_SECRET=local-jwt-secret-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d

# =============================================================================
# AI SERVICES
# =============================================================================
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2
OLLAMA_EMBEDDING_MODEL=nomic-embed-text
GROQ_API_KEY=
OPENAI_API_KEY=

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=debug




