# Development Environment Variables
# Copy to .env.dev in project root for Docker Compose
# All environments use the same variable structure - only values differ

# =============================================================================
# ENVIRONMENT IDENTIFICATION
# =============================================================================
NODE_ENV=development
ENVIRONMENT=dev

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DEV_DB_HOST=localhost
DEV_DB_PORT=5433
DEV_DB_USER=lifeworld_dev
DEV_DB_PASSWORD=lifeworld_dev_local
DEV_DB_NAME=lifeworld_dev
DEV_DATABASE_URL=postgresql://lifeworld_dev:lifeworld_dev_local@postgres-dev:5432/lifeworld_dev
DEV_DB_CONTAINER_NAME=life-db-dev

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================
DEV_BACKEND_PORT=3001
DEV_API_URL=http://localhost:3001
DEV_BACKEND_CONTAINER_NAME=life-world-os-backend-dev
DEV_BACKEND_IMAGE_NAME=life-world-os-backend-dev

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
DEV_FRONTEND_PORT=5173
DEV_FRONTEND_URL=http://localhost:5173
DEV_FRONTEND_CONTAINER_NAME=life-world-os-frontend-dev
DEV_FRONTEND_IMAGE_NAME=life-world-os-frontend-dev
VITE_API_URL=http://localhost:3001

# =============================================================================
# DEV HUB CONFIGURATION
# =============================================================================
DEV_HUB_PORT=8080
DEV_HUB_URL=http://nexus.devhub.com
DEV_HUB_CONTAINER_NAME=life-world-os-dev-hub
DEV_HUB_IMAGE_NAME=life-world-os-dev-hub

# =============================================================================
# AUTHENTICATION
# =============================================================================
DEV_JWT_SECRET=dev-jwt-secret-change-in-production-min-32-chars
DEV_JWT_EXPIRES_IN=7d
JWT_SECRET=dev-jwt-secret-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d

# =============================================================================
# AI SERVICES
# =============================================================================
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2
OLLAMA_EMBEDDING_MODEL=nomic-embed-text
GROQ_API_KEY=
OPENAI_API_KEY=

# =============================================================================
# LOGGING
# =============================================================================
DEV_LOG_LEVEL=debug
LOG_LEVEL=debug
