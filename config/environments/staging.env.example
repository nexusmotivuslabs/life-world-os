# Staging Environment Variables
# Copy to .env.staging in project root for Docker Compose
# All environments use the same variable structure - only values differ

# =============================================================================
# ENVIRONMENT IDENTIFICATION
# =============================================================================
NODE_ENV=staging
ENVIRONMENT=staging

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
STAGING_DB_HOST=localhost
STAGING_DB_PORT=5434
STAGING_DB_USER=lifeworld_staging
STAGING_DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD
STAGING_DB_NAME=lifeworld_staging
STAGING_DATABASE_URL=postgresql://lifeworld_staging:CHANGE_ME_SECURE_PASSWORD@postgres-staging:5432/lifeworld_staging
STAGING_DB_CONTAINER_NAME=life-db-staging

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================
STAGING_BACKEND_PORT=3002
STAGING_API_URL=http://localhost:3002
STAGING_BACKEND_CONTAINER_NAME=life-world-os-backend-staging
STAGING_BACKEND_IMAGE_NAME=life-world-os-backend-staging

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
STAGING_FRONTEND_PORT=5174
STAGING_FRONTEND_URL=http://localhost:5174
STAGING_FRONTEND_CONTAINER_NAME=life-world-os-frontend-staging
STAGING_FRONTEND_IMAGE_NAME=life-world-os-frontend-staging
VITE_API_URL=http://localhost:3002

# =============================================================================
# AUTHENTICATION
# =============================================================================
STAGING_JWT_SECRET=CHANGE_ME_STAGING_JWT_SECRET_MIN_32_CHARS
STAGING_JWT_EXPIRES_IN=7d
JWT_SECRET=CHANGE_ME_STAGING_JWT_SECRET_MIN_32_CHARS
JWT_EXPIRES_IN=7d

# =============================================================================
# AI SERVICES
# =============================================================================
OLLAMA_URL=
OLLAMA_MODEL=llama3.2
OLLAMA_EMBEDDING_MODEL=nomic-embed-text
GROQ_API_KEY=
OPENAI_API_KEY=

# =============================================================================
# LOGGING
# =============================================================================
STAGING_LOG_LEVEL=info
LOG_LEVEL=info
