{
  "name": "life-world-os",
  "version": "1.0.0",
  "description": "Life World Operating System - A gamified life operating system with XP, seasons, clouds, and resources",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "verify": "node scripts/utils/verify-prerequisites.js",
    "setup": "npm run verify && npm install && npm run setup:env",
    "setup:env": "cp config/environments/dev.env.example .env.dev || true",
    "env:local": "./scripts/envs/local.sh",
    "env:dev": "./scripts/envs/dev.sh",
    "env:staging": "./scripts/envs/staging.sh",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:db": "docker-compose --profile db -f docker-compose.dev.yml up -d",
    "dev:db:down": "docker-compose --profile db -f docker-compose.dev.yml down",
    "dev:db:logs": "docker-compose --profile db -f docker-compose.dev.yml logs -f postgres-dev",
    "dev:backend": "cd apps/backend && npm run dev",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "dev:dev-hub": "cd apps/dev-hub-app && npm run dev",
    "dev:rie": "concurrently \"npm run dev:rie-frontend\" \"npm run dev:rie-backend\"",
    "dev:rie-frontend": "cd apps/rie-frontend && npm run dev",
    "dev:rie-backend": "cd apps/rie-backend && source .venv/bin/activate && uvicorn main:app --reload --port 8100",
    "dev:local": "./scripts/envs/local.sh",
    "local": "./scripts/envs/local.sh",
    "local-lite": "./scripts/envs/local-lite.sh",
    "dev:local-lite": "./scripts/envs/local-lite.sh",
    "dev:hybrid": "npm run dev:db && npm run dev:observability && npm run dev",
    "dev:prometheus": "docker-compose -f docker-compose.observability.local.yml up -d prometheus grafana loki promtail",
    "dev:observability": "docker-compose -f docker-compose.observability.local.yml up -d prometheus grafana loki promtail",
    "dev:full": "docker-compose --profile full -f docker-compose.dev.yml up -d",
    "dev:full:down": "docker-compose --profile full -f docker-compose.dev.yml down",
    "dev:full:logs": "docker-compose --profile full -f docker-compose.dev.yml logs -f",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd apps/backend && npm run build",
    "build:frontend": "cd apps/frontend && npm run build",
    "build:dev-hub": "cd apps/dev-hub-app && npm run build",
    "migrate": "cd apps/backend && npm run migrate",
    "seed": "cd apps/backend && npm run seed",
    "seed:dev": "./scripts/utils/seed-dev.sh",
    "seed:staging": "./scripts/utils/seed-staging.sh",
    "generate-dump:dev": "cd apps/backend && NODE_ENV=development tsx ../../seeds/scripts/generateDump.ts dev",
    "generate-dump:staging": "cd apps/backend && NODE_ENV=staging tsx ../../seeds/scripts/generateDump.ts staging",
    "restore-db:dev": "cd apps/backend && NODE_ENV=development tsx ../../seeds/scripts/restoreDump.ts dev",
    "restore-db:staging": "cd apps/backend && NODE_ENV=staging tsx ../../seeds/scripts/restoreDump.ts staging",
    "smoke-test": "./scripts/utils/smoke-test.sh",
    "test": "npm run test -w life-world-os-backend && npm run test -w life-world-os-frontend",
    "test:coverage": "npm run test:coverage -w life-world-os-backend && npm run test:coverage -w life-world-os-frontend",
    "test:e2e": "playwright test",
    "test:e2e:no-server": "SKIP_WEBSERVER=1 playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:local": "./scripts/utils/run-e2e-local.sh",
    "test:e2e:report": "playwright show-report",
    "studio": "cd apps/backend && npm run studio",
    "docker:up": "docker-compose up -d postgres",
    "docker:down": "docker-compose down",
    "docker:clean": "docker-compose down -v",
    "clean:ship": "./scripts/clean-ship.sh",
    "docker:restart": "docker-compose restart postgres",
    "docker:logs": "docker-compose logs -f postgres",
    "docker:dev:up": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:dev:restart": "docker-compose -f docker-compose.dev.yml restart",
    "version:get": "node scripts/utils/get-version.js",
    "version:staging": "node scripts/utils/get-version.js staging",
    "version:prod": "node scripts/utils/get-version.js prod",
    "v1:status": "node scripts/utils/orchestrate-v1.js status",
    "v1:decisions": "node scripts/utils/orchestrate-v1.js decisions",
    "v1:orchestrate": "node scripts/utils/orchestrate-v1.js",
    "git:setup": "./scripts/setup/setup-git-user.sh",
    "domains:setup": "sudo ./scripts/setup/setup-domains.sh",
    "domains:fix": "./scripts/utils/fix-domains.sh",
    "network:setup": "./scripts/setup/setup-network-access.sh",
    "network:hosts": "./scripts/utils/generate-hosts-entry.sh",
    "dns:up": "docker-compose -f docker-compose.dns.yml up -d",
    "dns:down": "docker-compose -f docker-compose.dns.yml down",
    "dns:logs": "docker logs life-world-os-dns",
    "dns:setup": "./scripts/setup/setup-dns.sh",
    "domains:up": "docker-compose -f docker-compose.domains.yml up -d",
    "domains:down": "docker-compose -f docker-compose.domains.yml down",
    "domains:logs": "docker-compose -f docker-compose.domains.yml logs -f",
    "domains:status": "docker-compose -f docker-compose.domains.yml ps",
    "staging:deploy": "./scripts/envs/staging.sh",
    "staging:up": "docker-compose -f docker-compose.staging.yml up -d",
    "staging:down": "docker-compose -f docker-compose.staging.yml down",
    "staging:logs": "docker-compose -f docker-compose.staging.yml logs -f",
    "staging:restart": "docker-compose -f docker-compose.staging.yml restart",
    "staging:clean": "docker-compose -f docker-compose.staging.yml down -v",
    "prod:deploy": "./scripts/deploy-prod.sh",
    "deploy:cloud": "./scripts/utils/deploy-cloud.sh",
    "deploy:dev": "./scripts/envs/dev.sh",
    "deploy:staging": "./scripts/envs/staging.sh",
    "deploy:prod": "./scripts/utils/deploy-prod.sh",
    "env:status": "./scripts/utils/check-env-status.sh",
    "phase1:up": "docker-compose -f docker-compose.observability.local.yml up -d && docker-compose -f docker-compose.portainer.yml up -d",
    "phase1:down": "docker-compose -f docker-compose.observability.local.yml down && docker-compose -f docker-compose.portainer.yml down",
    "phase1:logs": "docker-compose -f docker-compose.observability.local.yml logs -f",
    "phase1:status": "docker-compose -f docker-compose.observability.local.yml ps && docker-compose -f docker-compose.portainer.yml ps",
    "observability:up": "docker-compose -f docker-compose.observability.local.yml up -d",
    "observability:down": "docker-compose -f docker-compose.observability.local.yml down",
    "observability:logs": "docker-compose -f docker-compose.observability.local.yml logs -f",
    "portainer:up": "docker-compose -f docker-compose.portainer.yml up -d",
    "portainer:down": "docker-compose -f docker-compose.portainer.yml down",
    "portainer:logs": "docker-compose -f docker-compose.portainer.yml logs -f",
    "sonar:setup": "./scripts/setup/setup-sonarqube.sh",
    "sonar:analyze": "./scripts/utils/run-sonarqube.sh",
    "sonar:analyze:docker": "./scripts/utils/sonar-docker-analyze.sh",
    "git:push": "./scripts/setup/setup-github-remote.sh",
    "git:push:all": "git push origin --all && git push origin --tags",
    "sonar:start": "./scripts/utils/start-sonarqube.sh",
    "sonar:up": "docker-compose -f docker-compose.sonarqube.yml up -d",
    "sonar:down": "docker-compose -f docker-compose.sonarqube.yml down",
    "sonar:logs": "docker-compose -f docker-compose.sonarqube.yml logs -f",
    "sonar:status": "docker-compose -f docker-compose.sonarqube.yml ps",
    "sonar:ready": "./scripts/utils/check-sonarqube-ready.sh"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "optionalDependencies": {
    "@esbuild/darwin-arm64": "^0.27.2"
  }
}
